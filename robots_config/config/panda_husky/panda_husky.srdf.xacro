<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_husky">

  <xacro:arg name="arm_id" default="panda"/> <!-- Name of this panda -->
  <xacro:arg name="hand" default="true"/> <!-- Should a franka_gripper be mounted at the flange? (Currently does not work without it) -->

  <xacro:property name="arm_id" value="$(arg arm_id)"/>

  <xacro:include filename="$(find robots_config)/config/panda/srdf/panda_arm.xacro"/>
  <xacro:panda_arm arm_id="${arm_id}"/>

  <xacro:if value="$(arg hand)">
    <xacro:include filename="$(find robots_config)/config/panda/srdf/hand.xacro"/>
    <xacro:hand arm_id="${arm_id}"/>

    <xacro:include filename="$(find robots_config)/config/panda/srdf/panda_arm_hand.xacro"/>
    <xacro:panda_arm_hand arm_id="${arm_id}"/>
  </xacro:if>

  <!-- Added to base -->
  
  <group name="arm_base">
      <chain base_link="base_link" tip_link="panda_tcp_link"/>
  </group>

    <group_state name="right_0_mid" group="arm_base">
      <joint name="panda_joint1" value="-1.08"/>
      <joint name="panda_joint2" value="0.734"/>
      <joint name="panda_joint3" value="-0.110"/>
      <joint name="panda_joint4" value="-1.335"/>
      <joint name="panda_joint5" value="1.738"/>
      <joint name="panda_joint6" value="1.979"/>
      <joint name="panda_joint7" value="-1.268"/>
    </group_state>

    <group_state name="right_1_mid" group="arm_base">
      <joint name="panda_joint1" value="-1.081"/>
      <joint name="panda_joint2" value="0.924"/>
      <joint name="panda_joint3" value="0.893"/>
      <joint name="panda_joint4" value="-1.611"/>
      <joint name="panda_joint5" value="0.611"/>
      <joint name="panda_joint6" value="1.592"/>
      <joint name="panda_joint7" value="-1.237"/>
    </group_state>

    <group_state name="right_0_up" group="arm_base">
      <joint name="panda_joint1" value="-0.454"/>
      <joint name="panda_joint2" value="-0.048"/>
      <joint name="panda_joint3" value="-0.767"/>
      <joint name="panda_joint4" value="-1.190"/>
      <joint name="panda_joint5" value="1.519"/>
      <joint name="panda_joint6" value="2.285"/>
      <joint name="panda_joint7" value="-0.392"/>
    </group_state>

    <group_state name="right_1_up" group="arm_base">
