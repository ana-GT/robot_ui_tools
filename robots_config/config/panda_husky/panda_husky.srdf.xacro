      <joint name="panda_joint6" value="1.185"/>
      <joint name="panda_joint7" value="-0.798"/>
    </group_state>

    <disable_collisions link1="panda_link5" link2="panda_hand" reason="Adjacent" />
    <disable_collisions link1="front_left_wheel" link2="panda_link1" reason="Adjacent" />
    <disable_collisions link1="front_right_wheel" link2="panda_link1" reason="Adjacent" />
    <disable_collisions link1="rear_left_wheel" link2="top_plate_link" reason="Adjacent" />
    <disable_collisions link1="rear_right_wheel" link2="top_plate_link" reason="Adjacent" />
    <disable_collisions link1="panda_link0" link2="base_link" reason="Adjacent" />
    <disable_collisions link1="panda_link1" link2="base_link" reason="Adjacent" />
    <disable_collisions link1="front_right_wheel" link2="top_plate_link" reason="Adjacent" />
    <disable_collisions link1="front_left_wheel" link2="top_plate_link" reason="Adjacent" />
    <disable_collisions link1="panda_link1" link2="top_plate_link" reason="Adjacent" />
    <disable_collisions link1="panda_link5" link2="panda_link7" reason="Adjacent" />
    <!--panda_link8 and panda_link5-->

</robot>
