      <joint name="panda_joint2" value="-0.067"/>
      <joint name="panda_joint3" value="-0.579"/>
      <joint name="panda_joint4" value="-1.368"/>
      <joint name="panda_joint5" value="1.237"/>
      <joint name="panda_joint6" value="2.367"/>
      <joint name="panda_joint7" value="-0.548"/>
    </group_state>

    <group_state name="left_0_mid" group="arm_base">
      <joint name="panda_joint1" value="0.893"/>
      <joint name="panda_joint2" value="0.886"/>
      <joint name="panda_joint3" value="0.548"/>
      <joint name="panda_joint4" value="-1.416"/>
      <joint name="panda_joint5" value="-2.114"/>
      <joint name="panda_joint6" value="1.837"/>
      <joint name="panda_joint7" value="-0.298"/>
    </group_state>

    <group_state name="left_1_mid" group="arm_base">
      <joint name="panda_joint1" value="1.926"/>
      <joint name="panda_joint2" value="1.515"/>
      <joint name="panda_joint3" value="-1.268"/>
      <joint name="panda_joint4" value="-2.147"/>
      <joint name="panda_joint5" value="0.110"/>
      <joint name="panda_joint6" value="1.837"/>
      <joint name="panda_joint7" value="-0.798"/>
    </group_state>

    <group_state name="left_0_up" group="arm_base">
